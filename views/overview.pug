extends base

block content

  header.header-3
    .bird-container.bird-container--one
      .bird.bird--one
    .bird-container.bird-container--two
      .bird.bird--two
    .bird-container.bird-container--three
      .bird.bird--three
    .bird-container.bird-container--four
      .bird.bird--four

  .header__text-box-3
    h1.heading-primary-3
      span.heading-primary--main-3 Outdoors
      span.heading-primary--sub-3 is where life happens
    a.btn-3.btn-3--white.btn-3--animated(href="#section-tours") Discover our tours

  section.section-about
    .u-center-text.u-margin-bottom-big
      h2.heading-secondary
        | Exciting tours for adventurous people
    .row
      .col-1-of-2
        h3.heading-tertiary.u-margin-bottom-small You're going to fall in love with nature
        p.paragraph
          | Lorem ipsum dolor sit amet consectetur adipisicing elit. Aperiam, ipsum sapiente aspernatur libero repellat quis consequatur
          | ducimus quam nisi exercitationem omnis earum qui.
        h3.heading-tertiary.u-margin-bottom-small Live adventures like you never have before
        p.paragraph
          | Lorem ipsum dolor sit amet consectetur adipisicing elit. Asperiores nulla deserunt voluptatum nam.
        a.btn-text(href="#") Learn more →
      .col-1-of-2
        .composition
          img.composition__photo.composition__photo--p1(srcset="/img/nat-1.jpg 300w, /img/nat-1-large.jpg 1000w" sizes="(max-width: 56.25em) 20vw, (max-width: 37.5em) 30vw, 300px" alt="Photo 1" src="img/nat-1-large.jpg")
          img.composition__photo.composition__photo--p2(srcset="/img/nat-2.jpg 300w, /img/nat-2-large.jpg 1000w" sizes="(max-width: 56.25em) 20vw, (max-width: 37.5em) 30vw, 300px" alt="Photo 2" src="img/nat-2-large.jpg")
          img.composition__photo.composition__photo--p3(srcset="/img/nat-3.jpg 300w, /img/nat-3-large.jpg 1000w" sizes="(max-width: 56.25em) 20vw, (max-width: 37.5em) 30vw, 300px" alt="Photo 3" src="img/nat-3-large.jpg")



  main.main
    .card-container
    
      each tour in tours
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
            h3.heading-tertirary
              span= tour.name

          .card__details
            h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
            p.card__text= tour.summary
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-map-pin')
              span= tour.startLocation.description
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-calendar')
              span= tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-flag')
              span= `${tour.locations.length} stops`
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-user')
              span= `${tour.maxGroupSize} people`

          .card__footer
            p
              span.card__footer-value= `$${tour.price}`
              | 
              span.card__footer-text per person
            p.card__ratings
              span.card__footer-value= tour.ratingsAverage
              | 
              span.card__footer-text= `rating (${tour.ratingsQuantity})`
            a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) Details

  section.section-book
    .row
      .book
        .book__form
          form.form(action="#")
            .u-margin-bottom-medium
              h2.heading-secondary
                | Start A Chat!
            .form__group
              input#name.form__input(type="text" placeholder="Full name" required="")
              label.form__label(for="name") Full name
            .form__group
              input#email.form__input(type="email" placeholder="Email address" required="")
              label.form__label(for="email") Email address
            .form__group.u-margin-bottom-medium
              .form__radio-group
                input#small.form__radio-input(type="radio" name="size")
                label.form__radio-label(for="small")
                  span.form__radio-button
                  |                                             Small tour group
              .form__radio-group
                input#large.form__radio-input(type="radio" name="size")
                label.form__radio-label(for="large")
                  span.form__radio-button
                  |                                             Large tour group
            .form__group
              button.btn.btn--green Submit Now →
